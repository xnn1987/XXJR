<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="490dp">

        <LinearLayout

            android:background="@drawable/linearlayout_corner"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dlyanz"/>

            <TextView
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录验证"
                android:textSize="@dimen/world_14sp"
                android:textColor="@color/word_black_333333"
                android:layout_gravity="center_horizontal"/>
            
            <RelativeLayout
                android:layout_marginTop="48dp"
                
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="33dp">
                <TextView

                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="请输入验证码"
                    android:textSize="@dimen/world_14sp"
                    android:textColor="#646464"/>
                
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/linearlayout_corner">

                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/common_margin_10"
                    android:paddingRight="10dp"
                    android:textColor="@color/word_black_333333"
                    android:textSize="@dimen/world_14sp"
                    android:textColorHint="@color/word_gray_9a9a9a"
                    android:hint="请输入验证码"/>

            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/guanbi_zx"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_width_60"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/button_Sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dialog_zx_btn"/>
    </RelativeLayout>

</LinearLayout>