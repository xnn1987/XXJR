<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud_f7f7f7"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroud_f7f7f7">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfe0" />

        <TextView
            android:id="@+id/textView_item_firstletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroud_f7f7f7"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="A"
            android:textColor="#9a9a9a" />

        <LinearLayout
            android:background="@drawable/click_white_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contactFm_lv_item_heigh"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView_item_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.xxjr.xxjr.custview.CustViewGroup
                android:id="@+id/concat_cust_concat_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:orientation="horizontal" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dedfe0" />

    </LinearLayout>

</LinearLayout>