    <RelativeLayout
        android:id="@+id/Simple_Rl_city"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:id="@+id/SalaryOrder_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="所在城市"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Simple_tv_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/SalaryOrder_city"
            android:text="深圳"
            android:textColor="#9a9a9a"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/back_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="22dp"
        android:background="#dedfe0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:text="客户姓名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Simple_edt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入客户真实姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="13sp" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:text="手机号码"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Simple_edt_Tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入常用手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:text="身份证号"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Simple_edt_cardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入身份证号"
            android:inputType="phone"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/SalaryOrder_edt_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="验证码   "
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Simple_edt_randomNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/SalaryOrder_edt_yanzheng"
            android:background="@null"
            android:hint="客户手机验证码"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="13sp" />

        <Button
            android:id="@+id/Simple_btn_randomNo"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_shape_coners_line_blue"
            android:text="短信验证"
            android:textColor="#339cdc"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:text="贷款金额"
            android:textColor="#333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Simple_edt_MoneySum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:hint="1.00-50.00"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万"
            android:textColor="#9a9a9a"
            android:textSize="13sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <Button
        android:id="@+id/Simple_btn_Commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_shape_coners_orange"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/SalaryOrder_tv_elseAlway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:text="其他方式交单"
            android:textColor="#9a9a9a"
            android:textSize="13sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/SalaryOrder_tv_elseAlway"
            android:background="#dedfe0"
            android:paddingLeft="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/SalaryOrder_tv_elseAlway"
            android:background="#dedfe0"
            android:paddingRight="15dp" />
    </RelativeLayout>

    <!--<LinearLayout
        android:paddingTop="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfe0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="若只填写简单信息简单返点"
            android:textColor="#333"
            android:textSize="13sp" />
    </LinearLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/Simple_ll_duanxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/duanxin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  短信发送给好友"
                android:textColor="#9a9a9a"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Simple_ll_weixinfenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixinfenxiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  微信分享给好友"
                android:textColor="#9a9a9a"
                android:textSize="13sp" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
