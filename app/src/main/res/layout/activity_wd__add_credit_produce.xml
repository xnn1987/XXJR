<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/title_three_no_statusbar" />

    <ScrollView
        android:id="@+id/addcredit_sv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/addcreditproduce_ll_choice"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/add_xindai_produce_selected"
                android:orientation="horizontal">

                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/addcreditproduce_btn_geren"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY" />

                <Button
                    android:layout_marginTop="30dp"
                    android:id="@+id/addcreditproduce_btn_qiye"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您已选择的服务对象："
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_duixiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人"
                        android:textColor="@color/origin_qianse"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/layout_gray_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp">

                    <EditText
                        android:id="@+id/addcreditproduce_et_produce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入产品名称"
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textColorHint="#d2d2d2"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/addcreditproduce_rl_fuwu"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/layout_gray_line"
                    android:paddingLeft="14dp">

                    <ImageView
                        android:id="@+id/addcreditproduce_iv_fuwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/chengshi" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/addcreditproduce_iv_fuwu"
                        android:background="@null"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="服务城市："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/addcreditproduce_tv_fuwu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/addcreditproduce_tv_city"
                        android:background="@null"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginRight="20dp"
                        android:text=""
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@mipmap/back_arrow" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="18dp"
                    android:text="还款方式"
                    android:textColor="@color/word_gray_9a9a9a"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="28dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <RelativeLayout
                        android:id="@+id/addcreditproduce_rl_benxi"
                        android:layout_width="80dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/addcreditproduce_tv_benxi"
                            android:layout_width="67dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/wd_huankuanfangshi_tv_seletor"
                            android:gravity="center"
                            android:text="等额本息"
                            android:textColor="@color/wd_huankuanfangshi_tv"
                            android:textSize="14sp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/addcreditproduce_iv_benxi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:src="@mipmap/gouxuan1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/addcreditproduce_rl_benjin"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/addcreditproduce_tv_benjin"
                            android:layout_width="67dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/wd_huankuanfangshi_tv_seletor"
                            android:gravity="center"
                            android:text="等额本金"
                            android:textColor="@color/wd_huankuanfangshi_tv"
                            android:textSize="14sp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/addcreditproduce_iv_benjin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:src="@mipmap/gouxuan1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/addcreditproduce_rl_xianxihouben"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/addcreditproduce_tv_xianxihouben"
                            android:layout_width="67dp"
                            android:layout_height="26dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/wd_huankuanfangshi_tv_seletor"
                            android:gravity="center"
                            android:text="先息后本"
                            android:textColor="@color/wd_huankuanfangshi_tv"
                            android:textSize="14sp" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/addcreditproduce_iv_xianxihouben"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dp"
                            android:src="@mipmap/gouxuan1" />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="18dp"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="42dp"
                android:paddingRight="18dp"
                android:paddingTop="17dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="放款额度："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_erdu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/wdproduce_blue_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.xxjr.xxjr.other.seekbar.MaterialRangeSlider
                    android:id="@+id/creditproduce_rs_erdu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:minHeight="45dp"
                    app:insideRangeLineColor="@color/origin_qianse"
                    app:insideRangeLineStrokeWidth="2dp"
                    app:isSingleCircle="false"
                    app:outsideRangeLineColor="@color/backgroud_f7f7f7"
                    app:outsideRangeLineStrokeWidth="2dp"
                    app:pressedTargetRadius="12dp"
                    app:targetColor="@color/origin_qianse"
                    app:unpressedTargetRadius="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="放款时间："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/wdproduce_blue_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.xxjr.xxjr.other.seekbar.MaterialRangeSlider
                    android:id="@+id/creditproduce_rs_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:minHeight="45dp"
                    app:insideRangeLineColor="@color/origin_qianse"
                    app:insideRangeLineStrokeWidth="2dp"
                    app:isSingleCircle="false"
                    app:outsideRangeLineColor="@color/backgroud_f7f7f7"
                    app:outsideRangeLineStrokeWidth="2dp"
                    app:pressedTargetRadius="14dp"
                    app:targetColor="@color/origin_qianse"
                    app:unpressedTargetRadius="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="月利率范围："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_yue_fanwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/wdproduce_blue_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.xxjr.xxjr.other.seekbar.MaterialRangeSlider
                    android:id="@+id/creditproduce_rs_yue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:minHeight="45dp"
                    app:insideRangeLineColor="@color/origin_qianse"
                    app:insideRangeLineStrokeWidth="2dp"
                    app:isSingleCircle="false"
                    app:outsideRangeLineColor="@color/backgroud_f7f7f7"
                    app:outsideRangeLineStrokeWidth="2dp"
                    app:pressedTargetRadius="12dp"
                    app:targetColor="@color/origin_qianse"
                    app:unpressedTargetRadius="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="贷款期限："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_nianxian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/wdproduce_blue_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.xxjr.xxjr.other.seekbar.MaterialRangeSlider
                    android:id="@+id/creditproduce_rs_yearlimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:minHeight="45dp"
                    app:insideRangeLineColor="@color/origin_qianse"
                    app:insideRangeLineStrokeWidth="2dp"
                    app:isSingleCircle="false"
                    app:outsideRangeLineColor="@color/backgroud_f7f7f7"
                    app:outsideRangeLineStrokeWidth="2dp"
                    app:pressedTargetRadius="12dp"
                    app:targetColor="@color/origin_qianse"
                    app:unpressedTargetRadius="4dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">


                    <TextView
                        android:id="@+id/addcreditproduce_tv_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:text="是否对客户展示"
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/addcreditproduce_iv_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/addcreditproduce_tv_visible"
                        android:src="@mipmap/yuedu_h" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_YCXSF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="一次性收费："
                        android:textColor="@color/word_gray_9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addcreditproduce_tv_yicixing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/addcreditproduce_tv_YCXSF"
                        android:background="@null"
                        android:text="11"
                        android:textColor="@color/wdproduce_blue_text"
                        android:textSize="14sp" />


                </RelativeLayout>

                <com.xxjr.xxjr.other.seekbar.MaterialRangeSlider
                    android:id="@+id/creditproduce_rs_yicixing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:minHeight="45dp"
                    app:insideRangeLineColor="@color/origin_qianse"
                    app:insideRangeLineStrokeWidth="2dp"
                    app:isSingleCircle="true"
                    app:outsideRangeLineColor="@color/backgroud_f7f7f7"
                    app:outsideRangeLineStrokeWidth="2dp"
                    app:pressedTargetRadius="12dp"
                    app:targetColor="@color/origin_qianse"
                    app:unpressedTargetRadius="4dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>



