<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/layout_shape_coners_white"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
<!--

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/xitongNorify_tv_state"
                android:text="●"
                android:textSize="10sp"
                android:layout_marginRight="2dp"
                android:textColor="#fc6923"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
-->


            <ImageView
                android:id="@+id/xitongnotify_iv_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xitongtongzhi1" />

            <TextView
                android:id="@+id/xitongnotify_tv_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/xitongnotify_iv_icon"
                android:text="温馨提示"

                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/xitongnotify_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/xitongnotify_tv_tishi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:text="54454"
                android:textColor="#9a9a9a"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="12dp"
            android:background="#dedfe0" />

        <TextView
            android:id="@+id/xitongnotify_tv_conten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="17dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="点击查看情况 >"
            android:textColor="#9a9a9a"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>