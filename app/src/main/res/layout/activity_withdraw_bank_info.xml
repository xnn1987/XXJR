<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <View
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="持卡人"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/withdrawInfo_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cfcfcf"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <RelativeLayout
        android:id="@+id/withdrawInfo_rl_bank"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/withdrawInfo_tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="33dp"
            android:text="银行"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/withdrawInfo_tv_bankDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/withdrawInfo_tv_bank"
            android:text="请选择开户银行"
            android:textColor="#cfcfcf"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
            android:text="卡号"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/withdrawInfo_et_BankNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入银行卡卡号"
            android:textColor="#cfcfcf"
            android:background="@null"
            android:maxLength="20"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="33dp"
            android:text="支行"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/withdrawInfo_et_sub_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#cfcfcf"
            android:maxLength="30"
            android:hint="请填写开户支行"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <RelativeLayout
        android:id="@+id/withdrawInfo_rl_city"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:background="@android:color/white"
        >

        <TextView
            android:id="@+id/withdrawInfo_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="33dp"
            android:text="银行"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/withdrawInfo_tv_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/withdrawInfo_tv_city"
            android:text="请选择銀行卡所在城市"
            android:textColor="#cfcfcf"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <Button
        android:id="@+id/WithdrawInfo_btn_Commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_shape_coners_orange"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>
