<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_shape_coners"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="小小金融珂卡芙电话"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_0.5"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/dialCheckResult_tv_tel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="400-189-2600"
                android:textColor="#2c8afa"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/layout_shape_coners">


            <TextView
                android:id="@+id/dialCheckResult_tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="#2c8afa"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
