<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:text="请填写贷款客户信息"
        android:textColor="#9a9a9a"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:text="客户姓名"
            android:textColor="#9a9a9a"
            android:textSize="13sp" />

        <TextView
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:id="@+id/ContactDetail_tv_userNamme" />
    </LinearLayout>

    <View
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:textColor="#9a9a9a"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textSize="13sp" />

        <TextView
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:id="@+id/ContactDetail_tv_userID" />
    </LinearLayout>

    <View
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:textColor="#9a9a9a"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="13sp" />

        <TextView
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:textSize="13sp"
            android:id="@+id/ContactDetail_tv_tel" />
    </LinearLayout>

    <View
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <TextView
            android:textColor="#9a9a9a"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贷款金额"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:textColor="#333333"
            android:textSize="13sp"
            android:id="@+id/ContactDetail_tv_ApplyAmount" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

</LinearLayout>
