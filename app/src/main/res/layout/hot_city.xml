<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/City_ll_hotcity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="#f7f7f7"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:text="热门城市"
            android:textColor="#9a9a9a"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <Button
                android:id="@+id/hotCity_btn_beijing"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="北京市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_shanghai"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="上海市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_guangzhou"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="广州市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_shenzhen"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="深圳市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <Button
                android:id="@+id/hotCity_btn_wuhan"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="武汉市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_changsha"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="长沙市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_tianjin"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="天津市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <Button
                android:id="@+id/hotCity_btn_chongqing"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="重庆市"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:text="全部"
            android:textColor="#9a9a9a" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

</LinearLayout>