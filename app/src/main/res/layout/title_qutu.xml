<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_color"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/common_margin_20">


        <LinearLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingLeft="@dimen/common_margin_10"
            android:id="@+id/cardfm_ll_choiceTime"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:background="@drawable/click_white_selector"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cardfm_tv_loadType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款"
                android:layout_marginRight="6dp"
                android:textColor="@color/word_black_333333"
                android:textSize="@dimen/world_14sp" />
            <TextView
                android:id="@+id/cardfm_tv_choiceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="@color/word_black_333333"
                android:textSize="@dimen/world_14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_10"
                android:layout_marginRight="@dimen/common_margin_10"
                android:src="@mipmap/jiant" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@drawable/cardfm_title_search"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/titlecard_et_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入图片名称"
                android:textColor="@color/word_black_333333"
                android:textColorHint="@color/word_gray_9a9a9a"
                android:textSize="@dimen/world_13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sous" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>