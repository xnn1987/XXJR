<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/title_only_backicon_title"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="手机号"

            />
        <EditText
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="请输入登录手机号"
            android:textColorHint="#cfcfcf"
            android:textSize="14sp"
            android:textColor="#9a9a9a"
            android:background="@null"
            android:phoneNumber="true"
            android:maxLength="11"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#333333"
                android:text="验证码"
                />
            <EditText
                android:id="@+id/validateCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:hint="请输入短信验证码"
                android:textColorHint="#cfcfcf"
                android:textSize="14sp"
                android:textColor="#9a9a9a"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/sendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/btn_shape_coners_line_blue"
                android:textColor="#349feb"
                android:text="获取验证码"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#333333"
            android:text="新密码"
            />
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="请输入新密码"
            android:textColorHint="#cfcfcf"
            android:textColor="#9a9a9a"
            android:textSize="14sp"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <Button
        android:id="@+id/cust_btn_forget"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/btn_shape_coners_tint_orange"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>
