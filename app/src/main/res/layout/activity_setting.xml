<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:id="@+id/Setting_ll_open"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="12"
            android:text="消息推送"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Setting_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guan_2x"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/Setting_iv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kai_2x" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:id="@+id/Setting_LL_Cache"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="清除缓存"
            android:textColor="#333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/Setting_tv_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="2"
                android:text="06546"
                android:textColor="#fc6923"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="26dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:id="@+id/Setting_ll_feedback"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="12"
            android:text="意见反馈"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@mipmap/back_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="26dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:id="@+id/modify_login_pwd"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="12"
            android:text="修改登录密码"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@mipmap/back_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="26dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:id="@+id/Setting_ll_AboutXXJR"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="11dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="12"
            android:text="关于我们"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@mipmap/back_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <Button
        android:id="@+id/Setting_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_shape_coners_orange"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>