<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/title_color">

        <LinearLayout
            android:background="@drawable/click_trasparent_selector"
            android:id="@+id/ThreeTitle2Icon_ll_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/fanhui" />
        </LinearLayout>

        <TextView
            android:id="@+id/ThreeTitle2Icon_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/word_black_333333"
            android:textSize="15sp" />


        <LinearLayout
            android:background="@drawable/click_trasparent_selector"
            android:id="@+id/ThreeTitle2Icon_ll_Icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/ThreeTitle2Icon_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_0.5"
        android:background="@color/line_gray"/>

    <include layout="@layout/no_network_status"/>


</LinearLayout>
