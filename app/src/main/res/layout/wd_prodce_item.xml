                android:src="@mipmap/xiajiantou" />

        </LinearLayout>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/click_trasparent_selector"
                android:id="@+id/wdproduce_ll_shared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fenxiang1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享产品"
                    android:textColor="#5cbbff"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/wdproduce_tv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="删除"
                android:textColor="@color/word_gray_9a9a9a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wdproduce_tv_alter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_toRightOf="@id/wdproduce_tv_del"
                android:clickable="true"
                android:text="编辑"
                android:textColor="@color/word_gray_9a9a9a"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />

</LinearLayout>