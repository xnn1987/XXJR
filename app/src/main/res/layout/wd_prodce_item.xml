<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/line_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/wdproduce_tv_initial"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/wd_produce_tv"
                android:gravity="center"
                android:text="小"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wdproduce_tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/wdproduce_tv_initial"
                android:gravity="center"
                android:text="小拉开距离"
                android:textColor="@color/word_black_333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/wdproduce_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/wdproduce_tv_initial"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="小拉开距离"
                android:textColor="@color/word_gray_9a9a9a"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/wdproduce_tv_loadRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:text="5246354354"
            android:textColor="@color/word_gray_9a9a9a"
            android:textSize="14sp" />

        <LinearLayout
            android:paddingBottom="33dp"
            android:id="@+id/wdproduce_ll_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/wdproduce_tv_applyRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/word_gray_9a9a9a"
                android:text="内容"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/wdproduce_tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textColor="@color/word_gray_9a9a9a"
                android:textSize="14sp" />

        </LinearLayout>

        <!--<LinearLayout
            android:background="@drawable/click_trasparent_selector"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:id="@+id/wdproduce_ll_showclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wdproduce_tv_show"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展开详情  "
                android:textColor="#5cbbff"
                android:textSize="13sp"/>


            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/wdproduce_iv_show"
