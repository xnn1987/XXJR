<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ed_shape_line_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="您暂时未开通实名认证"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#333333"/>

    <TextView
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加提现银行卡需进行实名认证"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"/>

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reanNname_btn_DialogNO"
            android:textSize="17sp"
            android:textColor="#349feb"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="否"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dedfe0"
            />

        <Button
            android:id="@+id/reanNname_btn_Dialog_realname"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#349feb"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="去实名"/>

    </LinearLayout>


</LinearLayout>