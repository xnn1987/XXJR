<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/backgroud_f7f7f7"
    android:layout_height="match_parent">

    <TextView
        android:clickable="true"
        android:id="@+id/wdchangpiin_tv_tianjia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="添加产品"
        android:textColor="#f79068"
        android:background="@drawable/click_white_selector"
        android:textSize="@dimen/tv_bottomSp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <View
        android:layout_above="@id/wdchangpiin_tv_tianjia"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f79068"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_only_backicon_title"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tianjiachanpin"/>

        <TextView
            android:layout_marginTop="52dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微店产品"
            android:textColor="@color/word_black_333333"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您尚未添加任何微店产品，赶快去添加吧"
            android:textColor="#cccccc"
            android:textSize="14sp"
            android:gravity="center"/>


    </LinearLayout>




</RelativeLayout>