<?xml version="1.0" encoding="utf-8"?>
<com.xxjr.xxjr.custview.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:background="@drawable/image_shape_coners_line_gray"
        android:id="@+id/item_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/photo_bg_img" >
    </ImageView>

    <ImageView
        android:id="@+id/item_grid_del"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:src="@mipmap/shanchun"
        android:layout_alignParentRight="true"/>
</com.xxjr.xxjr.custview.SquareLayout>