<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:paddingLeft="15dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="为了您的帐号安全，请勿将验证码信息泄露给他人"
            android:textColor="#9a9a9a"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="11dp"
            android:orientation="horizontal"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#333333"
                android:textSize="14sp"
                />
            <EditText
                android:id="@+id/cust_new_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="22dp"
                android:hint="请输入新手机号码"
                android:textColorHint="#cfcfcf"
                android:textSize="14sp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#dedfe0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:paddingRight="11dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="11">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/email_send_randomNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入手机验证码"
                    android:textColorHint="#cfcfcf"
                    android:textColor="#9a9a9a"
                    android:layout_marginLeft="35dp"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/sendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    android:background="@drawable/btn_shape_coners_line_blue"
                    android:textColor="#349feb"
                    android:text="获取验证码"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />
    <Button
        android:id="@+id/cust_change_telephone_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/btn_shape_coners_tint_orange"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>