<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_gray"/>

    <com.xxjr.xxjr.custview.PercentLinearLayout
        android:background="@color/white"
        android:clickable="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/cardTitle_tv_all"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qutu_title"
                android:text="全部"
                android:textColor="@color/card_title"
                android:textSize="@dimen/world_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/cardTitle_tv_card"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qutu_title"
                android:text="名片"
                android:textColor="@color/card_title"
                android:textSize="@dimen/world_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/cardTitle_tv_date"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qutu_title"
                android:text="日历"
                android:textColor="@color/card_title"
                android:textSize="@dimen/world_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/cardTitle_tv_weather"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qutu_title"
                android:text="天气"
                android:textColor="@color/card_title"
                android:textSize="@dimen/world_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="20%">

            <TextView
                android:id="@+id/cardTitle_tv_hot"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qutu_title"
                android:text="热门"
                android:textColor="@color/card_title"
                android:textSize="@dimen/world_14sp" />
        </LinearLayout>

    </com.xxjr.xxjr.custview.PercentLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_gray"/>

</LinearLayout>