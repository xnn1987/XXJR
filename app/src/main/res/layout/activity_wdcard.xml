<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/tools"
    android:background="@color/backgroud_f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_three_view_titlebar" />

    <RelativeLayout
        android:id="@+id/wdcard_rl_headicono"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/click_white_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店主头像"
            android:textColor="@color/word_black_333333" />

        <ImageView
            android:id="@+id/wdcard_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow" />

        <com.xxjr.xxjr.other.image.imageCircle.CircleImage
            android:id="@+id/wdcard_iv_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/wdcard_iv_arrow"
            android:src="@mipmap/touxiang"
            android:scaleType="fitXY"
            imagecontrol:border_inside_color="#e8eef0"
            imagecontrol:border_outside_color="#e8eef0"
            imagecontrol:border_thickness="0.5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wdcard_rl_dianpuname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="店铺名称" />

        <EditText
            android:gravity="right"
            android:id="@+id/wdcard_et_dianpuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:hint="未填写"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/word_gray_9a9a9a"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp" />

    <RelativeLayout
        android:id="@+id/wdcard_rl_companyName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="机构名称" />

        <EditText
            android:gravity="right"
            android:id="@+id/wdcard_et_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:hint="未填写"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/word_gray_9a9a9a"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp" />

    <RelativeLayout
        android:id="@+id/wdcard_rl_city"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/click_white_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所在城市" />

        <ImageView
            android:id="@+id/wdcard_iv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow" />

        <TextView
            android:id="@+id/wdcard_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/wdcard_iv_city"
            android:text="选择" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp" />

    <RelativeLayout
        android:id="@+id/wdcard_rl_time"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/click_white_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="从业年限" />

        <ImageView
            android:id="@+id/wdcard_iv_congyeshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_arrow" />

        <TextView
            android:id="@+id/wdcard_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/wdcard_iv_congyeshijian"
            android:text="选择" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/white"
        android:padding="12dp">

        <EditText
            android:id="@+id/wdcard_et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请填写店铺介绍(30字以内)\n示例：专业从事无抵押信用贷款服务"
            android:lineSpacingExtra="10dp"
            android:maxLength="35"
            android:textColor="@color/word_gray_9a9a9a"
            android:textColorHint="@color/hint_gray"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>
