<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"

        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Withdraw_tv_username"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#9a9a9a"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"

        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="提现方式"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Withdraw_tv_way"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="提现至微信"
            android:textColor="#9a9a9a"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />


    <RelativeLayout
        android:id="@+id/Withdraw_rl_AddBankCard"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/click_white_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="当前微信"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Withdraw_tv_WXname"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#9a9a9a"
                android:textSize="14sp" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/Withdraw_tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="银行"
            android:textColor="#333333"
            android:textSize="14sp" />-->

       <!-- <ImageView
            android:id="@+id/Withdraw_iv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@id/Withdraw_tv_bank"
            android:src="@mipmap/ic_launcher" />-->

        <!--<TextView
            android:id="@+id/Withdraw_tv_bankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/back_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedfe0" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="27dp"
        android:background="#dedfe0" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="金额"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Withdraw_et_input"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="可提现金额"
            android:inputType="number"
            android:textColor="#9a9a9a"
            android:textColorHint="#cfcfcf"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="#dedfe0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Withdraw_et_authCode"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="输入验证码"
                android:inputType="number"
                android:textColor="#9a9a9a"
                android:textColorHint="#cfcfcf"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Withdraw_btn_sendCode"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:background="@drawable/btn_shape_coners_line_blue"
                android:text="短信验证"
                android:layout_marginRight="4dp"
                android:textColor="#349feb"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Withdraw_btn_sendVoidCode"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:background="@drawable/btn_shape_coners_line_blue"
                android:text="语音验证"
                android:textColor="#349feb"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="35dp"
        android:background="#dedfe0" />


    <Button
        android:id="@+id/Withdraw_btn_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_shape_coners_orange"
        android:text="提现"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</LinearLayout>
