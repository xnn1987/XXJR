<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/beijing_h"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="131dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="90dp"
            android:src="@mipmap/logo_h" />

        <RelativeLayout
            android:id="@+id/LoginActivity_rl_finish"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/LoginActivity_iv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="11dp"
                android:layout_marginTop="32dp"
                android:src="@mipmap/guanbi_h" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login_shape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/denglu_h"/>


            <EditText
                android:maxLength="11"
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:hint="输入手机号"
                android:textColor="#4c4c4c"
                android:textColorHint="@color/word_hite"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mima_h"/>

            <EditText
                android:id="@+id/passwprd"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:hint="输入登录密码"
                android:inputType="textPassword"
                android:textColor="#4c4c4c"
                android:textColorHint="@color/word_hite"
                android:textSize="14sp" />


            </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cust_btn_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:textColor="#4c4c4c"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/cust_btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_shape_coners_white"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/cust_btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/btn_shape_coners_linewhite_transparent"
        android:text="注册"
        android:textColor="#fa613d"
        android:textSize="15sp" />
</LinearLayout>
