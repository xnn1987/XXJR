<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_0.5"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/click_white_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/jrrefer_iv_icon"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shibai01" />

        <RelativeLayout
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/jrrefer_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6dp"
                android:text="343543543543543545354asdfasdfasdfasdfasdfasdfasdfasdfasdfa324324asdfasdfkjasldkfjalsdfasdfas"
                android:textColor="#2c2c2c"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/jrrefer_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="#b6b6b6"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/jrrefer_tv_zuixin"
                    android:layout_width="34dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="#eb503a"
                    android:text="最新"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/jrrefer_tv_msgCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@id/jrrefer_tv_zuixin"
                    android:text="0"
                    android:textColor="#b6b6b6"
                    android:textSize="12dp" />
                
                <ImageView
                    android:layout_toLeftOf="@id/jrrefer_tv_msgCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xiaoxi"/>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>