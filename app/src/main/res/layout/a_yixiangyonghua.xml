<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/backgroud_f7f7f7"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/title_only_backicon_title"/>

    <TextView
        android:layout_marginTop="41dp"
        android:layout_marginBottom="15dp"
        android:text="您还为添加任何微店产品"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/word_black_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="15dp"
        android:textSize="14sp"
        android:text="分享次数越多，获得用户申请的机会越大哦"
        android:gravity="center"
        android:textColor="@color/word_gray_9a9a9a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <Button

        android:layout_width="216dp"
        android:textSize="14sp"
        android:background="@color/origin_qianse"
        android:text="了解客户申请从哪来"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_height="44dp" />

</LinearLayout>