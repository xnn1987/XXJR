<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="208dp"
        android:background="@drawable/dialog_shape"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialog_ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dialog_bottom_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogcommon_tv_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_trasparent_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#7b7b7c"
                android:textSize="@dimen/dialog_bottomSp" />

            <View
                android:background="#d8d8d8"
                android:layout_width="@dimen/line_width"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/common_margin_10"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/dialogcommon_tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/click_trasparent_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#64d8a0"
                android:textSize="@dimen/dialog_bottomSp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/dialog_ll_bottom"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/dialogcommon_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话框"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/world_14sp" />

        </LinearLayout>

    </RelativeLayout>
    
    <ImageView
        android:id="@+id/dialogcommon_iv_cancel"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/guanb"/>

</RelativeLayout>