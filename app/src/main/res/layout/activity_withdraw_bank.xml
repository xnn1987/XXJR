<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/withdrawBank_rl_cust_bank_detail"
        android:layout_width="fill_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/cust_bank_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cust_bank_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/withdrawBank_tv_cust_bank_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xx银行"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/withdrawBank_tv_cust_bank_card_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3123123" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/withdrawBank_cust_change_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back_arrow" />
        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfe0"/>
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/WithdrawBank_ll_cust_add_bank"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_shape_coners"
        android:gravity="center">

        <ImageView
            android:id="@+id/WithdrawBack_iv_addBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dianji" />
    </LinearLayout>


</LinearLayout>
