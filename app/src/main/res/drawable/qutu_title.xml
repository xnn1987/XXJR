<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape >
            <solid android:color="#0fd47f"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="6dp"
                android:top="6dp"
                android:left="6dp"
                android:right="6dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <solid android:color="#0fd47f"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="6dp"
                android:top="6dp"
                android:left="6dp"
                android:right="6dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape >
            <solid android:color="#0fd47f"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="6dp"
                android:top="6dp"
                android:left="6dp"
                android:right="6dp"/>
        </shape>
    </item>
    <item>
        <shape >
            <solid android:color="#ededed"/>
            <corners android:radius="6dp"/>
            <padding
                android:bottom="6dp"
                android:top="6dp"
                android:left="6dp"
                android:right="6dp"/>
        </shape>
    </item>
</selector>